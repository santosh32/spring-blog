<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<bean id="springHelloWorldBean" class="in.spring4buddies.application.beans.annotation.SpringHelloWorldBean" />

	<bean id="springFooBean" class="in.spring4buddies.application.beans.annotation.SpringFooBean"/>

	<bean id="springBarBean" class="in.spring4buddies.application.beans.annotation.SpringBarBean" />

</beans>